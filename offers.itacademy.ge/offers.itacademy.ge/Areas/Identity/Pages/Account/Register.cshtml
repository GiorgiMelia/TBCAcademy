@page
@using offers.itacademy.ge.Domain.entities
@using offers.itacademy.ge.Web.Areas.Identity.Pages.Account
@using offers.itacademy.ge.Web.Models
@using Microsoft.AspNetCore.Mvc.Rendering

@model RegisterModel
@{
    ViewData["Title"] = "Register as";
}

<h1>@ViewData["Title"]</h1>
<div style="display: flex; gap: 2rem; margin-top: 2rem;">
    <div style="border: 1px solid #ccc; border-radius: 10px; padding: 2rem; width: 300px; text-align: center;">
        <h3>Buyer</h3>
        <p>For individual customers who want to buy discounted products.</p>
        <a class="btn btn-primary" asp-page="/Account/Register/RegisterBuyer">Register as Buyer</a>
    </div>

    <div style="border: 1px solid #ccc; border-radius: 10px; padding: 2rem; width: 300px; text-align: center;">
        <h3>Company</h3>
        <p>For companies who want to post products and offers.</p>
        <a asp-page="/Account/Register/RegisterCompany" class="btn btn-secondary">Register as Company</a>
    </div>
</div>
  @section Scripts {
      <partial name="_ValidationScriptsPartial" />
  }
